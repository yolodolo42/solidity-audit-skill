{
  "name": "solidity-audit-mcp",
  "version": "1.0.0",
  "description": "MCP server for Solidity smart contract auditing - provides structured tools for building, testing, and reviewing smart contracts with Claude Code",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "solidity-audit-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "solidity",
    "audit",
    "smart-contracts",
    "security",
    "ethereum",
    "foundry",
    "hardhat",
    "claude",
    "claude-code"
  ],
  "author": "yolodolo42",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yolodolo42/solidity-audit-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/yolodolo42/solidity-audit-mcp/issues"
  },
  "homepage": "https://github.com/yolodolo42/solidity-audit-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
